# =========================================
# AI Prompt Generator - Environment Configuration
# =========================================
# Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control!
# =========================================

# -----------------------------------------
# AI API Configuration
# -----------------------------------------
# Choose your AI provider: 'claude' or 'openai'
AI_PROVIDER=claude

# Claude API Key (from https://console.anthropic.com/)
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key (from https://platform.openai.com/)
OPENAI_API_KEY=sk-your-openai-key-here

# -----------------------------------------
# AWS Configuration
# -----------------------------------------
# AWS Region for deployment
AWS_REGION=us-east-1

# S3 Bucket name (will be created if doesn't exist)
S3_BUCKET_NAME=

# CloudFront Distribution ID (populated after deployment)
CLOUDFRONT_DISTRIBUTION_ID=

# API Gateway Endpoint (populated after deployment)
API_GATEWAY_ENDPOINT=

# -----------------------------------------
# Domain Configuration (Optional)
# -----------------------------------------
# Custom domain name (e.g., promptgenerator.yourdomain.com)
DOMAIN_NAME=

# Route 53 Hosted Zone ID for your domain
HOSTED_ZONE_ID=

# -----------------------------------------
# Application Settings
# -----------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Maximum characters allowed for prompts
MAX_CHARACTERS=10000

# Rate limiting: requests per minute per IP
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------
# Analytics Configuration
# -----------------------------------------
# Google Analytics Measurement ID (G-XXXXXXXXXX)
GOOGLE_ANALYTICS_ID=

# Enable analytics tracking
ENABLE_ANALYTICS=true

# -----------------------------------------
# Feature Flags
# -----------------------------------------
# Enable dark mode toggle
ENABLE_DARK_MODE=true

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Enable WAF protection (production only recommended)
ENABLE_WAF=true

# -----------------------------------------
# Monitoring & Logging
# -----------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# CloudWatch Log retention in days
LOG_RETENTION_DAYS=30

# -----------------------------------------
# Security
# -----------------------------------------
# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=*

# Enable security headers
ENABLE_SECURITY_HEADERS=true
