{
  "name": "ai-prompt-generator",
  "version": "1.0.0",
  "description": "AI-powered prompt enhancement tool for ChatGPT, Claude, and GPT-4",
  "author": "AI Prompt Generator",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai-prompt-generator.git"
  },
  "scripts": {
    "dev": "npx http-server frontend -p 3000 -c-1 --cors",
    "start": "npm run dev",
    "build": "npm run build:css && npm run build:js",
    "build:css": "echo 'No CSS build step required'",
    "build:js": "echo 'No JS build step required'",
    "lint": "eslint frontend/js/**/*.js",
    "lint:fix": "eslint frontend/js/**/*.js --fix",
    "format": "prettier --write frontend/**/*.{html,css,js}",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:load": "k6 run tests/load/load-test.js",
    "deploy": "./scripts/deploy.sh",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "validate:cf": "aws cloudformation validate-template --template-body file://infrastructure/cloudformation/main.yaml",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "security:scan": "npm audit && snyk test",
    "clean": "rm -rf node_modules coverage reports"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "keywords": [
    "ai",
    "prompt",
    "generator",
    "chatgpt",
    "claude",
    "gpt-4",
    "prompt-engineering",
    "ai-tools"
  ]
}
